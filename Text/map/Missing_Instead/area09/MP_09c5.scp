DEF("MAP")
RES("INIT")
{

	// カギを持っているなら宝箱消す
	CHECK_KEY(3)
	OFF_SKIP(1)
	HIDE_CHR("tbox")

	// カギ設定
	CHECK_GAME_FLAG(1924)
	ON_SKIP(2)
	KAGI("d1924",1)
	SKIP(1)
	INIT_SWITCH_ON("d1924")

}


// ----------------------------------------------------------------------------
// カギ開け
// ----------------------------------------------------------------------------

DEF("d1924")
RES("KAGI")
{
	GAME_FLAG_ON(1924)
}


// ----------------------------------------------------------------------------
// 宝箱                                                                        
// ----------------------------------------------------------------------------

DEF("tbox")
RES("INIT")
{
	SET_TREASURE("tbox",1,203,"ITEM")
}

DEF("ITEM")
RES("CATCH")
{
	SE("SE_GETITEM")
	STOP_PC(0)
	SYS("#C2得到異界的鑰匙！")
	KILL_CHR("tbox",0,0,0)
}


