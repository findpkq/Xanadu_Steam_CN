DEF("MAP")
RES("INIT")
{
	// オープニングイベントやってたらとばす
	CHECK_GAME_FLAG(2)
	ON_JUMP NEXT

	CINEMA_ON(0)
	permit_script_camera(0)
	WAIT(30)
	FADE_IN(120)

NEXT:

	// 宝箱にカードを詰める
	SET_TREASURE("box1",1,460,"card1")
}



