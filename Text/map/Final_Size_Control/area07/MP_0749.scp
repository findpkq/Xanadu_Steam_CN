DEF("tbox")
RES("INIT")
{
	CHECK_GAME_FLAG(749)
	OFF_JUMP next

//	SET_TREASURE("tbox",0,1000,"ITEM")
	INIT_SWITCH_ON("tbox")

next:
}

RES("CLICK")
{
	CINEMA_ON(0)
	STOP_PC(0)
	FOCUS_CHR("tbox")

	CHECK_GAME_FLAG(749)
	OFF_JUMP ITEM

ITEM:
// 1000ゴールド
	SWITCH_ON("tbox")
	POP_ITEM_ICON("tbox", 225, -9,0,1, 1,80,0)
	WAIT(140)

	DEL_ITEM_ICON("tbox")
	ATTACH_EFC("EFC_99ITEM_GET","tbox","POS")

	SYS_EX("得到【1000Ｇ】！",-1,0X00000200)

	GET_GOLD(1000)
	GAME_FLAG_ON(749)
	FOCUS_CHR("PC")
	CINEMA_OFF(0)
	END

}

