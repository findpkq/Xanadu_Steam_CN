// 木箱

DEF("woodbox")
RES("INIT")
{
	// 3524	EV チュートリアル、木箱について
	check_game_flag(3524)
	on_jump EXIT

	CINEMA_ON(0)
	STOP_PC(0)
	FOCUS_CHR("woodbox")

	GAME_FLAG_ON(3524)

	//----------------------------
	novel_on(0,1)
	wait(60)
	SYS_EX("関于【木箱】",-1,0X00000200)
	SYS_EX("【木箱】可以推動，|也可以把它打坏。",-1,0X00000200)
	SYS_EX("受到一次攻撃会変成半損坏状態，|可以採在上面，但是不能推動。",-1,0X00000200)
	SYS_EX("受到両次攻撃会完全損坏，|可以通過切換地図使其復原。",-1,0X00000200)
	SYS_EX("還有，就算地面稍有起伏，|也可以継続将箱子向前推動。",-1,0X00000200)

	novel_off(0)
	wait(60)
	//----------------------------

	FOCUS_CHR("PC")
	CINEMA_OFF(0)

//--------------------------------------------------------------------

EXIT:
	end
}

