//	HIDE_CHR("tbox2")
	DELETE_EFC("tbox2")
	PERMIT_SCRIPT_CAMERA(0)
	SE("SE_GETITEM")
	SYS_EX("得到【王冠扎格琉伊勒斯】！",-1,0X00000200)
	CINEMA_OFF(0)
//	BGM( -1,0,2000 )
	FADE_BGM( 0, 100, 2000)
	END

EXIT:
	CROSS_FADE(60)
	DELETE_EFC("tbox2")
	PERMIT_SCRIPT_CAMERA(0)
	WAIT(30)
	SE("SE_ERROR")
	SYS_EX("拿不動更多行李了。",-1,0X00000200)
	SWITCH_OFF("tbox2")
	FOCUS_CHR("PC")
	CINEMA_OFF(0)
//	BGM( -1,0,2000 )
	FADE_BGM( 0, 100, 2000)
}
