DEF("MAP")

RES("INIT")
{
	// シネスコ時スペクタクルズON
	ROOM_FLAG_ON(254)

	// 水マップ
	SE("SE_MIZU")

	CHECK_GAME_FLAG(537)
	ON_JUMP NEXT

	LOAD_MAP("MP_05a8")
	LOAD_HITMAP("MP_05a8h")

NEXT:

	// カギ設定
	CHECK_GAME_FLAG(1531)
	ON_SKIP(2)
	KAGI("d1531",1)
	SKIP(1)
	INIT_SWITCH_ON("d1531")

}


