}


// ----------------------------------------------------------------------------
// 宝箱                                                                        
// ----------------------------------------------------------------------------
DEF("tbox1")
RES("INIT")
{
	CHECK_GAME_FLAG(597)
	OFF_JUMP NEXT

//	CHECK_ROOM_MEMO(255)
//	OFF_JUMP NEXT
// ★05/06/21:イベントアイテム箱→開けっぱで残す。
//	HIDE_CHR("tbox1")

	INIT_SWITCH_ON("tbox1")

NEXT:
}

RES("CLICK")
{
	CINEMA_ON(0)
	STOP_PC(0)
	FOCUS_CHR("tbox1")

	CHECK_GAME_FLAG(597)
	OFF_JUMP ITEM

ITEM:
// バデッドアーマー+1
	SWITCH_ON("tbox1")
	POP_ITEM_ICON("tbox1", 96, -1,0.375,7, 1,80,0)
	WAIT(140)

	CHECK_MAX_ITEM(0)
	ON_JUMP EXIT

	DEL_ITEM_ICON("tbox1")
	ATTACH_EFC("EFC_99ITEM_GET","tbox1","POS")
//	WAIT(45)

	SYS_EX("得到【鎖甲＋１】！",-1,0X00000200)

	GET_ITEM(96, 1)
	GAME_FLAG_ON(597)
	ROOM_MEMO_ON(255)
//	SET_COLOR("tbox1",0x00000000,45,1)
	FOCUS_CHR("PC")
	CINEMA_OFF(0)
	END

EXIT:
	SE("SE_ERROR")
	DEL_ITEM_ICON("tbox1")
	SYS_EX("拿不動更多行李了。",-1,0X00000200)
	SWITCH_OFF("tbox1")
	FOCUS_CHR("PC")
	CINEMA_OFF(0)
}


