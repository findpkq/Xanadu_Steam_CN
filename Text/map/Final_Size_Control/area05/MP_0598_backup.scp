	show_chr("kani_body")
	show_chr("kani_core")
	set_motion("kani_body","EMPTY1",0)

	// 壁破壊@
	wait(60)
	SHAKE(25,25)
	se("SE_WALL_HIT")

	wait(10)
	shake(0,15)

	wait(60)
	SHAKE(25,25)
	se("SE_WALL_HIT")

	wait(10)
	shake(0,15)

	wait(90)

	set_motion("kabe1","DOWN",0)
	set_motion("hand","DOWN",0)
	shake(25,25)
	se("SE_WALL_HIT")

	wait(40)
	shake(0,15)
	wait(80)

	shake(25,25)
	se("SE_WALL_HIT")
	wait(40)

	shake(0,15)
	wait(140)

	blur(50)
	slow(1)

	shake(25,25)
	se("SE_WALL_HIT")
	wait(40)

	// 目光る
	attach_efc("EFC_SPI_EYE","kani_core","Frame1_O_0603_Layer1")

	shake(0,15)
	wait(20)

	set_motion("kabe1","HOOK",0)

	wait(0)

	slow(0)
	blur(0)

	// 突進モーション再生
	set_motion("kani_body","EMPTY2",0)
	
	// 壁の辺りまで迫ってきたら…
	wait(263)

	slow(1)
	blur(50)

	// 壁破壊A
	set_motion("kabe2","DOWN",0)

	shake(25,25)
	se("SE_WALL_HIT")
	wait(40)

	shake(0,15)
	wait(20)

	set_motion("kabe2","HOOK",0)
//	wait(127)
	wait(27)
	wait(25)
	shake(0,50)
	wait(75)

	blur(0)
	slow(0)

	// シネマＯＦＦ
	cinema_off(0)

	// マジ当たりON
	set_collision_obj("kani_body",8)
	
	// ＨＰバー表示
	disp_hp_bar("kani_core")

//	bgm(5,0,0,0,-1)

	end
