DEF("turimomo")

RES("INIT")
{
//ボスを倒したかどうか？
	check_game_flag(566)
	off_jump momo
	end

momo:
//モモを見ているかどうか？
	check_game_flag(565)
	off_jump turi
	end

turi:
	game_flag_on(565)

	// スキップ許可
	skip_enable(1)

	// シネマON
	cinema_on(0)

	// PCの動きを止める
	stop_pc(0)

	// ムービー用カメラ読み込み
	load_camera("C_MOMO_TURI")
	set_camera_org(0,0,0)
	play_camera(100,620)

	wait(520)
	// 座標を変更
//	set_pos("PC",-22,0,6)
	// 向きを変更
	SET_DEG_EX("PC","girl")
	// シネマＯＦＦ
	cinema_off(0)

	end
}



