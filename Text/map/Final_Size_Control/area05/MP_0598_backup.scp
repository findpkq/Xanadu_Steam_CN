{
	show_chr("kani_ashi1")
	show_chr("kani_ashi2")
	show_chr("kani_ashi3")
	show_chr("kani_ashi4")
	show_chr("kani_ashi5")
	show_chr("kani_ashi6")
	show_chr("kani_ashi7")
	show_chr("kani_ashi8")
	link_hp_chr("kani_ashi1","kani_body")
	link_hp_chr("kani_ashi2","kani_body")
	link_hp_chr("kani_ashi3","kani_body")
	link_hp_chr("kani_ashi4","kani_body")
	link_hp_chr("kani_ashi5","kani_body")
	link_hp_chr("kani_ashi6","kani_body")
	link_hp_chr("kani_ashi7","kani_body")
	link_hp_chr("kani_ashi8","kani_body")

	// コアを復活させ本体とリンクさせる
	refresh("kani_core")
	link_hp_chr("kani_core","kani_body")

	// ＨＰバー表示
	disp_hp_bar("kani_body")
}

RES("KILL")
{
	// カメラ空間の固定を解除
	unlock_camera("第二形態")
	
	// PCの動きを止める
	stop_pc(0)

	// 女の子をボスの位置に
	set_pos_ex("drasure","kani_body")

	// シネマON
	cinema_on(0)

	// ブラー効果ON
	blur(50)

	// 死亡モーション再生
	set_motion("kani_body","EMPTY4",0)
	wait(436)

	fade_out(-1)
	game_flag_on(566)
	wait(128)
	
	blur(0)
	
	// カニたち退場
	hide_chr("kani_body")
	hide_chr("kani_core")
	hide_chr("kani_ashi1")
	hide_chr("kani_ashi2")
	hide_chr("kani_ashi3")
	hide_chr("kani_ashi4")
	hide_chr("kani_ashi5")
	hide_chr("kani_ashi6")
	hide_chr("kani_ashi7")
	hide_chr("kani_ashi8")


	// ドラスレ登場 ----------------------------------------------------------
	
	// 注視するターゲットをドラスレに変更←かなり変則的な使い方。オススメできない。
	set_target_chr("drasure")

	// けんをみる
	SET_DEG_EX("PC","drasure")
	
	show_chr("drasure")
	// 剣光る
	attach_efc("EFC_05BOSSMUSUME","drasure","POS")

	wait(60)

	fade_in(-1)
	wait(300)

	fade_out(-1)
	wait(120)

	bgm(2,1,0,0,-1)


	// 第二形態用のカメラ設定を全部切る -------------------------------------

	// いない名前を指定してターゲッティングＯＦＦ
	set_target_chr("xxxx")
	// フリー回転モードOFF
	set_map_attr(16)
	// オートターゲットモードOFF
	set_map_attr(17)
	// 回転角度をゲーム時のものに戻す
//	correct_rot_y(0)
	// カメラ箱を変更
	camera_off("第二形態")

	// ももちゃんとの会話 ----------------------------------------------------
	
	hide_chr("turimomo")
	show_chr("girl")
	
	// 座標を変更
	set_pos("PC",1,0,-3)
	// ももをみる
	SET_DEG_EX("PC","girl")
	// もももみる
	SET_DEG_EX("girl","")

	FADE_IN(-1)
//	WAIT(180)
//	WAIT(30)

	blur(1)
	// 注視点を"もも"に合わせたいがための回りくどい処理（新たに命令作る予定）
	focus_chr("girl")
	wait(120)
	blur(0)
	
	// ももカメラオン
	camera_off("全体")
	camera_on("ももイベント用？")

	active_chr("girl")

	SET_NAME("GIRL","小桃")
	MSG("……呼姶……")
	WAIT(30)
	set_motion("girl","ATTACK1",30)
	MSG("？？　這是嗾里〜？大哥哥祢是誰？？")
	WAIT(60)
	MSG("…………那个，小桃我姶，|散歩的時候総覚得在被什麼人呼喚。")
	MSG("然后就什麼都不記得了……")
	WAIT(60)
	MSG("嚔呀〜頭還很疼咾……|嗚，真想早点見到爺爺姶……")
	MSG("喟喟！大哥哥是「正義的朋友」対叺〜☆|請送我回家叺〜?")
	WAIT(30)
	SE("SE_EVENT_I")
	SYS("得到「#C2屠竜剣#C*」！")
	GET_ITEM(36)
	WAIT(240)
	LOAD_HITMAP("MP_0598h")
	FADE_OUT(-1)
	WAIT(128)

	// クリアフラグ立ててジジイ部屋へ
	GAME_FLAG_ON(1)
	// お泊りフラグおろす
	GAME_FLAG_OFF(3301)
	ENTRY_MAP("kaniato")

	END
}

