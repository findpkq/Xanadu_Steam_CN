DEF("MAP")

RES("INIT")
{
	// シネスコ時スペクタクルズON
	ROOM_FLAG_ON(254)

	// 水マップ
	SE("SE_MIZU")

	// カギ設定
	CHECK_GAME_FLAG(1552)
	ON_SKIP(2)
	KAGI("d1552",1)
	SKIP(1)
	INIT_SWITCH_ON("d1552")
}


// ----------------------------------------------------------------------------
// カギ開け
// ----------------------------------------------------------------------------

DEF("d1552")
RES("KAGI")
{
	GAME_FLAG_ON(1552)
}


