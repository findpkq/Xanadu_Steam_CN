DEF("MAP")

RES("INIT")
{
	// シネスコ時スペクタクルズON
	ROOM_FLAG_ON(254)


	// カギ設定
	CHECK_GAME_FLAG(1503)
	ON_SKIP(2)
	KAGI("d1503",1)
	SKIP(1)
	INIT_SWITCH_ON("d1503")

	CHECK_GAME_FLAG(536)
	OFF_JUMP NEXT

	LOAD_MAP("MP_0586")
	LOAD_HITMAP("MP_0586h")

END

NEXT:

	// 水マップ
	SE("SE_MIZU")

}


