DEF("girl")
RES("CLICK")
{

// アイコンサンプル -----------------------------------------------------

	pop_item_icon("abc", 187, 3.0, 0.0, -0.24, 5.0, 180, 0)
	wait(240)
	del_item_icon("abc")
	end
// ----------------------------------------------------------------------


// 石版サンプル(START) -----------------------------------------------------

	MSG("★石版閲覧測試★|請拿着石版触矼我。")

	// 石版持ってる？（0:石版/1:手記）
	check_text_item(0)
	off_jump skip
	// 全部没収（0:石版/1:手記）
	MSG("不要拿着石版！")
	MSG("没収！")
	pick_text_item(0)
skip:


	// とりあえずシネスコ
	cinema_on(0)
	wait(60)

menu_start:
	// 石版MENU呼び出し（0:石版/1:手記）
	call_text(0)

	// call_text()内で「キャンセル(12)」を選んだ時はここでスキップさせる
	check_sel_text(12)
	on_jump menu_end

	// 石版用背景を読みこみ
	load_novel_bg("epitaph\plate")
//	load_novel_bg("epitaph\paper")
	// 石版用背景表示
	novel_on(0)
	wait(60)

	// 選んだ石版に応じた文面の表示
	check_sel_text(0)
	off_jump sel1
	MSG_EX("石板①的内容",-1,0X00000010)
	jump novel_end
sel1:
	check_sel_text(1)
	off_jump sel2
	MSG_EX("石板②的内容",-1,0X00000010)
	jump novel_end
sel2:

	// 以下、石版⑫まで続く…


novel_end:
	// 石版用背景消去
	novel_off(0)
	wait(60)
	
	// 再び石版MENUへ
	jump menu_start

menu_end:
	// シネスコ消去
	cinema_off(0)
	wait(60)
	
skip:

	MSG("結束")
	
	end

