// 台座
// ----------------------------------------------------------------------------

DEF("daiza")

RES("CLICK")
{
	CHECK_ITEM(182)
	OFF_JUMP NOKEY

	// カギ有りイベント
	STOP_PC(0)
	SYS("#C2使用圓盤鑰匙")
	CINEMA_ON(0)
	FOCUS_CHR("daiza")
	SET_MOTION("daiza","EMPTY1",0)
	WAIT(170)
	KILL_CHR("daiza",0,0,80)
	CINEMA_OFF(0)


	PICK_ITEM(182)
	GAME_FLAG_ON(594)

	// カギ設定
	CHECK_GAME_FLAG(1546)
	ON_SKIP(2)
	KAGI("d1546",1)
	SKIP(1)
	INIT_SWITCH_ON("d1546")

	END

NOKEY:

	// カギ無しイベント
	SYS("#C2道路被有洞的石板拊住了。")

}



