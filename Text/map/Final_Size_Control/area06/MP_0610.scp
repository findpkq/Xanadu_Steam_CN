// ----------------------------------------------------------------------------
// ★05/04/18:バリア発生装置（サンプル）
// ※二段階で壊れるようにしてあります。演出等は適当です。

DEF("atari")
RES("HIT")
{
	HIDE_CHR("atari")
	SHOW_CHR("atari2")
	// 装置壊れアニメ@（外郭破壊）
	STOP_PC(0)

	SE(SE_EVENT_31)
	shake(0,32)
	SET_MOTION("machine","TURN_L")
	WAIT(120)
	SET_MOTION("machine","TURN_R")

	game_flag_on(678)

	end
}

DEF("atari2")
RES("HIT")
{
	// 装置壊れアニメA（内部破壊）
	shake(0,32)

	STOP_PC(0)
	CHECK_PC_EQUIP( 0, -1)
	ON_JUMP HAND
	// 武器攻撃モーション
	SET_MOTION("PC","EMPTY12",0)
	JUMP NEXT
HAND:
	// 素手攻撃モーション（ガントレット）
	SET_MOTION("PC","EMPTY12",0)
NEXT:
	SET_MOTION("machine","WALK1")
	SE(SE_EVENT_32)

	SLOW(4)
	BLUR(20)
	QUAKE(2,2,300)

	CINEMA_ON(0)
	CROSS_FADE(30)
	PERMIT_SCRIPT_CAMERA(1)
	SET_SCRIPT_CAMERA( 3.5,-0.3,0, -40,-110,0, 6, 15 )
	ROTATE_SCRIPT_CAMERA( 0,20,0,100, 0)
	WAIT(60)

	//スキップ
	set_skip_label("SKIP")

	// 破壊エフェクト出しながらホワイトアウト
	SE(SE_EVENT_33)
	WAIT(40)
	FADE_OUT_EX( 60, 1, 0xffffffff, 1)
	WAIT(60)

	SLOW(0)
	BLUR(0)

	//3709	EV C-10 結界装置
	GAME_FLAG_ON(3709)
	ENTRY_MAP("0602_0089")

SKIP:
	STOP_SE(0)
	QUAKE(0,0,1)
	HIDE_CHR("barrier")
	HIDE_CHR("atari2")
	SET_MOTION("machine","WALK2")
	SET_MOTION("PC","STAND",0)
	STOP_ENV_SE("SE_EVENT_29")
	DELETE_EFC("machine")
	SLOW(0)
	BLUR(0)

	// 3727	EV C-10b 決壊装置を壊したときに、城全景を見せる
	GAME_FLAG_ON(3727)

	// 3728	EV C-10c 城全景を見終わった
	GAME_FLAG_ON(3728)

	//3709	EV C-10 結界装置
	GAME_FLAG_ON(3709)

	CROSS_FADE(60)
	FOCUS_CHR("PC")
	PERMIT_SCRIPT_CAMERA(0)

	WAIT(60)

	CINEMA_OFF(0)
	fade_in(60)

}

//-- バリア ----------------------------------------------------------

DEF("barrier")

RES("INIT")
{
	// 城全景のバリア解除後に戻ってくる

	// 3727	EV C-10b 決壊装置を壊したときに、城全景を見せる
	CHECK_GAME_FLAG(3727)
	OFF_JUMP EXIT

	// 3728	EV C-10c 城全景を見終わった
	CHECK_GAME_FLAG(3728)
	ON_JUMP EXIT

	// バリアを消去＆装置をオフにしてホワイトイン
	QUAKE(0,0,1)
	HIDE_CHR("barrier")
	HIDE_CHR("atari2")
	SET_MOTION("machine","WALK2")
	SET_MOTION("PC","STAND",0)
	DELETE_EFC("machine")


	// 3728	EV C-10c 城全景を見終わった
	GAME_FLAG_ON(3728)

	SET_DEG("PC",90)


	CROSS_FADE(60)
	FOCUS_CHR("PC")
	PERMIT_SCRIPT_CAMERA(0)

	wait(60)
	fade_in(60)
	CINEMA_OFF(0)

EXIT:
	end
}

