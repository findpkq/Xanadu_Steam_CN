DEF("sw1")
RES("FOOT")
{
	CHECK_SWITCH("sw1")
	ON_JUMP L_B2

		// 降りたときに柱も下げる
		CHECK_GAME_FLAG(600)
		ON_JUMP DOWN
		END

		:DOWN
		CALL DOWN

		GAME_FLAG_OFF(600)
		END

L_B2:
	CHECK_SWITCH("sw2")
	ON_JUMP L_B3
	END

L_B3:
	CHECK_SWITCH("sw3")
	ON_JUMP L_B4
	END

L_B4:
		// マップ初期チェック回避
		CHECK_GAME_FLAG(600)
		ON_JUMP NEXT

		CALL UP

NEXT:

}


