// ----------------------------------------------------------------------------
// 浮遊石                                                                      
// ----------------------------------------------------------------------------

DEF("yuka")
RES("GOAL")
{
	// 動いているよフラグ
	ROOM_FLAG_ON(102)

	CHECK_GAME_FLAG(611)
	OFF_JUMP EXIT

	// 上がりON 下りOFF
	CHECK_ROOM_FLAG(101)
	OFF_JUMP UP
	JUMP DOWN

UP:
	// 上がり
	MOVE_VEC("yuka",0,3.5,0,240)
	ROOM_FLAG_ON(101)
	END

DOWN:
	// 下り
	MOVE_VEC("yuka",0,-3.5,0,240)
	ROOM_FLAG_OFF(101)
	END

EXIT:
	ROOM_FLAG_OFF(102)
}



