// ----------------------------------------------------------------------------
// スイッチ押しチェックサブルーチン                                            
// ----------------------------------------------------------------------------
@CHECK
{
		CHECK_SWITCH("sw1")
		ON_JUMP L_B2
		END

	L_B2:
		CHECK_SWITCH("sw2")
		ON_JUMP L_B3
		END

	L_B3:
		CHECK_SWITCH("sw3")
		ON_JUMP L_B4
		END

	L_B4:
		CHECK_SWITCH("sw4")
		ON_JUMP L_B5
		END

	L_B5:
		CHECK_SWITCH("sw5")
		ON_JUMP L_B6
		END

	L_B6:
		CHECK_SWITCH("sw6")
		ON_JUMP L_B7
		END

	L_B7:
		CALL hako

			// マップ初期チェック回避
			CHECK_GAME_FLAG(611)
			ON_JUMP NEXT2

		// イベント
		CINEMA_ON(0)
		STOP_PC(0)
		FOCUS_CHR("yuka")
		WAIT(60)
		QUAKE(0,5,20)

			// 移動中だったらMOVEとばす
			CHECK_ROOM_FLAG(102)
			ON_JUMP NEXT

		MOVE_VEC("yuka",0,0,0,1)

			NEXT:
		GAME_FLAG_ON(611)
		CINEMA_OFF(0)
		WAIT(60)

	// パズルクリア================
	clear_puzzle(0)
	// ============================

			NEXT2:

RET
}


