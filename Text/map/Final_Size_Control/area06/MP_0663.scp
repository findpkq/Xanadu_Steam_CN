	// シネスコ時スペクタクルズON
	ROOM_FLAG_ON(254)

	HIDE_CHR("tbox")

	// スイッチ１オンオフチェック
	CHECK_GAME_FLAG(641)
	OFF_JUMP next
	SHOW_CHR("tbox")
	MOVE_VEC("box",0,0,3,1)
	ROOM_FLAG_ON(7)
	HIDE_CHR("1")
	HIDE_CHR("2")
	HIDE_CHR("3")
	HIDE_CHR("4")
	HIDE_CHR("5")
	HIDE_CHR("6")
	HIDE_CHR("7")

next:

	// 宝箱GET済み
//	CHECK_GAME_FLAG(654)
//	OFF_SKIP(1)
//	HIDE_CHR("tbox")

	// カギ設定
	CHECK_GAME_FLAG(1673)
	ON_SKIP(2)
	KAGI("d1673",1)
	SKIP(1)
	INIT_SWITCH_ON("d1673")

	// カギ設定
	CHECK_GAME_FLAG(1674)
	ON_SKIP(2)
	KAGI("d1674",1)
	SKIP(1)
	INIT_SWITCH_ON("d1674")

}


