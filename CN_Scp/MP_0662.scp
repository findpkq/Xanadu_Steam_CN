//	put_monster("m04",331,18,2,0,4)

	// リッチ
	put_monster("m05",542,18,2,0,5)

	// アームドマミー
//	put_monster("m06",331,18,2,0,6)
	put_monster("m07",331,18,2,0,7)

	QUAKE(0,10,60)
	WAIT(120)
	CINEMA_OFF(0)
