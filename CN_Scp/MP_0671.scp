
// ----------------------------------------------------------------------------
// マップ初期化                                                                
// ----------------------------------------------------------------------------

DEF("MAP")

RES("INIT")
{
	set_rain_inf("EFC_06KAZE",1, 45, 15,240)
	rain(1)

	// SE再生
	SE("SE_WIND2")
	SE("SE_NAMI2")

	// カギ設定
	CHECK_GAME_FLAG(1684)
	ON_SKIP(2)
	KAGI("d1684",1)
	SKIP(1)
	INIT_SWITCH_ON("d1684")

	// 水路チェック
	CHECK_GAME_FLAG(643)
	OFF_JUMP NEXT

	// 流れている
	LOAD_MAP("MP_0679")
	SE("SE_TAKI")

END

NEXT:
	// 流れていない

}


// ----------------------------------------------------------------------------
// カギ開け
// ----------------------------------------------------------------------------

DEF("d1684")
RES("KAGI")
{
	GAME_FLAG_ON(1684)
}


// ----------------------------------------------------------------------------
// 宝箱                                                                        
// ----------------------------------------------------------------------------

DEF("tbox")
RES("INIT")
{
	CHECK_GAME_FLAG(645)
	OFF_JUMP next

	SET_TREASURE("tbox",1,210,"ITEM")
	INIT_SWITCH_ON("tbox")


next:
}

DEF("ITEM")
RES("CATCH")
{
	SE("SE_GETITEM")
	GAME_FLAG_ON(645)
}


